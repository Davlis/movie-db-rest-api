{
  "name": "movie-db-rest-api",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "postinstall": "babel src -d dist",
    "test": "jest --verbose --bail",
    "test:w": "jest --verbose --bail --watch",
    "build": "babel src test -d dist",
    "start": "node --harmony dist/server",
    "watch": "babel -w src -d dist",
    "watch-d": "babel -w src -d dist & nodemon --harmony dist/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Davlis/movie-db-rest-api.git"
  },
  "author": "Dawid Liszka",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Davlis/movie-db-rest-api/issues"
  },
  "homepage": "https://github.com/Davlis/movie-db-rest-api#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.12.0",
    "jest": "^22.4.4",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.4"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "mongoose": "^5.1.1",
    "morgan": "^1.9.0",
    "omdb-api-pt": "^2.0.1"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "/node_modules/"
    ]
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-shadow": 0,
      "no-console": 0,
      "no-plusplus": 0,
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2
    },
    "env": {
      "jasmine": true,
      "mocha": true,
      "node": true
    },
    "plugins": [
      "chai-friendly"
    ]
  }
}
